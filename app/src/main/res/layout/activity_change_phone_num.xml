<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            app:titleTextAppearance="@style/Toolbar.TitleText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_change_phone"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/layout_user_alter_phone"
        android:visibility="gone" />

    <include
        layout="@layout/layout_user_verify_second"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_first_verify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/user_change_phone_text_verify_identity"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_change_phone_hint_first"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_change_phone_hint_second"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_first_num"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/selector_bg_verify_code"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="@dimen/text_size_24" />

            <EditText
                android:id="@+id/et_second_num"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/selector_bg_verify_code"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="@dimen/text_size_24" />

            <EditText
                android:id="@+id/et_third_num"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/selector_bg_verify_code"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="@dimen/text_size_24" />

            <EditText
                android:id="@+id/et_fourth_num"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/selector_bg_verify_code"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="@dimen/text_size_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_countdown_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_change_phone_countdown"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_change_phone_hint_countdown"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_change_phone_hint_third"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_retrieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_change_phone_retrieve"
                android:textColor="@color/main_color_4876F9"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>