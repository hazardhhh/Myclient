<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.VerifyCodeLoginActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/login_appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_app_logo"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/main_splash"
                    android:clickable="true"
                    android:contentDescription="@string/empty"
                    android:focusable="true" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="34dp">

                    <LinearLayout
                        android:id="@+id/login_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.example.client.widget.ClearableEditTextWithIcon
                            android:id="@+id/edit_login_account"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/edittext_white_normal"
                            android:drawablePadding="15dp"
                            android:hint="@string/login_hint_phone"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.example.client.widget.ClearableEditTextWithIcon
                                android:id="@+id/edit_verify_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_white_normal"
                                android:drawablePadding="15dp"
                                android:hint="@string/login_hint_verify_code"
                                android:inputType="text"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@drawable/my_cursor"
                                android:textSize="15sp" />

                            <FrameLayout
                                android:id="@+id/fl_get_verify_code"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:foreground="?android:selectableItemBackground"
                                android:paddingEnd="20dp">

                                <TextView
                                    android:id="@+id/tv_get_verify_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/get_verify_code"
                                    android:textColor="@color/color_gray_666666" />
                            </FrameLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/register_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.example.client.widget.ClearableEditTextWithIcon
                            android:id="@+id/edit_register_account"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/edittext_white_normal"
                            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="15dp"
                            android:hint="@string/register_input_account"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <com.example.client.widget.ClearableEditTextWithIcon
                            android:id="@+id/edit_register_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/edittext_white_normal"
                            android:drawablePadding="15dp"
                            android:hint="@string/register_input_name"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <com.example.client.widget.ClearableEditTextWithIcon
                            android:id="@+id/edit_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/edittext_white_normal"
                            android:drawablePadding="15dp"
                            android:hint="@string/register_input_password"
                            android:inputType="textPassword"
                            android:longClickable="false"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/nim_message_button_bottom_send_selector"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/color_green_text_view_selector"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/register_login_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dip"
                    android:padding="15dip"
                    android:text="@string/register"
                    android:textColor="@drawable/register_tip_selector"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_account_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:foreground="?android:selectableItemBackground"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/tv_account_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_by_account"
                            android:textColor="@color/color_blue_3D7FFF" />
                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:id="@+id/fl_forget_psw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:foreground="?android:selectableItemBackground"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/tv_forget_psw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="忘记密码?"
                            android:textColor="@color/color_grey_999999" />
                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_login_setting_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="设置地址"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_noname_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="匿名入会"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>