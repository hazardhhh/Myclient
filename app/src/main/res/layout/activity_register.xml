<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".login.RegisterActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="只需一步，轻松完成注册"
        android:textColor="@color/color_text_333333"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_text_e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/ed_phone" />


    <EditText
        android:id="@+id/ed_code"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:hint="请输入收到的验证码"
        android:inputType="number"
        android:lines="1"
        android:maxLength="6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_get_verify_code"
        app:layout_constraintTop_toBottomOf="@id/ed_phone" />

    <TextView
        android:id="@+id/tv_get_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:enabled="false"
        android:text="@string/get_verify_code"
        android:textColor="@color/color_blue_3D7FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ed_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ed_code" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_text_e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/ed_code" />


    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:hint="请输入真实姓名"
        android:lines="1"
        app:layout_constraintTop_toBottomOf="@id/ed_code" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_text_e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/ed_name" />

    <LinearLayout
        android:id="@+id/ll_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ed_name">

        <CheckBox
            android:id="@+id/rb_agree_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已读并同意"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_service_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务协议》"
            android:textColor="@color/color_blue_3D7FFF"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="、"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_privacy_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/color_blue_3D7FFF"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/color_blue_3D7FFF"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/ll_agreement">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="同意协议并注册"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>